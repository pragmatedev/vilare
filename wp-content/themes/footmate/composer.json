{
  "name": "tentypdev/footmate",
  "description": "FootMATE",
  "license": "GPLv3",
  "autoload": {
    "psr-4": {
      "FM\\": "app/"
    }
  },
  "require": {
    "php": "^8.2",
    "illuminate/view": "^10.48",
    "illuminate/support": "^10.48",
    "illuminate/translation": "^10.48",
    "illuminate/validation": "^10.48"
  },
  "scripts": {
    "lint": "phpcs",
    "format": "phpcbf",
    "analyze": "phpstan analyse --memory-limit=2048M"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.11",
    "wp-coding-standards/wpcs": "^3.1",
    "phpstan/phpstan": "^2.1",
    "szepeviktor/phpstan-wordpress": "^2.0",
    "php-stubs/wp-cli-stubs": "^2.11"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
